{
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "evaluations": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": { "type": "string" },
          "score": { "type": "integer" },
          "evidences": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "comment": { "type": "string" },
                "lines": {
                  "type": "array",
                  "items": { "type": "string", "pattern": "^\\d+(-\\d+)?$" },
                  "default": []
                },
                "criticality": {
                  "type": "string",
                  "enum": ["high", "medium", "low"]
                }
              },
              "required": ["comment", "lines", "criticality"]
            }
          }
        },
        "required": ["name", "score", "evidences"]
      }
    },
    "priority issues": {
      "type": "array",
      "items": { "type": "string" }
    },
    "practical_tips": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": [
    "evaluations",
    "priority issues",
    "practical_tips"
  ]
}
